---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Products">
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl font-extrabold text-gray-900 mb-8">Our Solutions</h1>
    
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      <!-- Industrial Safety System -->
      <a href="/en/products/industrial-safety" class="bg-white rounded-lg shadow-lg overflow-hidden transform transition duration-300 hover:scale-105">
        <img src="https://images.unsplash.com/photo-1504917595217-d4dc5ebe6122?w=800" alt="Industrial Safety" class="w-full h-48 object-cover"/>
        <div class="p-6">
          <h3 class="text-xl font-semibold text-gray-900">Industrial Safety System</h3>
          <p class="mt-2 text-gray-600">Advanced PPE detection and workplace safety monitoring system.</p>
        </div>
      </a>

      <!-- Perimeter Security -->
      <a href="/en/products/perimeter-security" class="bg-white rounded-lg shadow-lg overflow-hidden transform transition duration-300 hover:scale-105">
        <img src="https://sgu.ac.id/wp-content/uploads/2020/12/1_QHxBLzMK7rp_5ysw77uK3A.gif" alt="Perimeter Security" class="w-full h-48 object-cover"/>
        <div class="p-6">
          <h3 class="text-xl font-semibold text-gray-900">Perimeter Security</h3>
          <p class="mt-2 text-gray-600">24/7 intelligent perimeter monitoring and threat detection.</p>
        </div>
      </a>

      <!-- Quality Control -->
      <a href="/en/products/quality-control" class="bg-white rounded-lg shadow-lg overflow-hidden transform transition duration-300 hover:scale-105">
        <img src="https://www.ripik.ai/wp-content/uploads/2024/07/Anomaly-Detection_1-1024x576.png" alt="Quality Control" class="w-full h-48 object-cover"/>
        <div class="p-6">
          <h3 class="text-xl font-semibold text-gray-900">Quality Control AI</h3>
          <p class="mt-2 text-gray-600">Automated quality inspection and process monitoring.</p>
        </div>
      </a>
    </div>
  </main>
</Layout>