---
interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/en') ? 'en' : 'sr';
const alternateLink = currentPath.startsWith('/en') 
  ? currentPath.replace('/en', '') 
  : '/en' + currentPath;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - StartAi</title>
  </head>
  <body class="min-h-screen bg-white">
    <nav class="bg-white shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <div class="flex-shrink-0 flex items-center">
              <a href={lang === 'en' ? '/en' : '/'}>
                <img src="/start-ai-logo-rs.png" alt="StartAi" class="h-8" />
              </a>
            </div>
            <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
              <a href={lang === 'en' ? '/en' : '/'} class={`${currentPath === (lang === 'en' ? '/en' : '/') ? 'text-gray-900 border-accent' : 'text-gray-500 border-transparent hover:text-gray-900'} inline-flex items-center px-1 pt-1 border-b-2`}>
                {lang === 'en' ? 'Home' : 'Početna'}
              </a>
              <a href={lang === 'en' ? '/en/products' : '/products'} class={`${currentPath === (lang === 'en' ? '/en/products' : '/products') ? 'text-gray-900 border-accent' : 'text-gray-500 border-transparent hover:text-gray-900'} inline-flex items-center px-1 pt-1 border-b-2`}>
                {lang === 'en' ? 'Products' : 'Proizvodi'}
              </a>
              <a href={lang === 'en' ? '/en/contact' : '/contact'} class={`${currentPath === (lang === 'en' ? '/en/contact' : '/contact') ? 'text-gray-900 border-accent' : 'text-gray-500 border-transparent hover:text-gray-900'} inline-flex items-center px-1 pt-1 border-b-2`}>
                {lang === 'en' ? 'Contact' : 'Kontakt'}
              </a>
            </div>
          </div>
          <div class="flex items-center">
            <a href={alternateLink} class="text-gray-500 hover:text-gray-900">
              {lang === 'en' ? 'SR' : 'EN'}
            </a>
          </div>
        </div>
      </div>
    </nav>

    <slot />

    <footer class="bg-gray-50 mt-20">
      <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <p class="text-gray-500">&copy; 2025 StartAi.rs. {lang === 'en' ? 'All rights reserved.' : 'Sva prava zadržana.'}</p>
        </div>
      </div>
    </footer>
  </body>
</html>